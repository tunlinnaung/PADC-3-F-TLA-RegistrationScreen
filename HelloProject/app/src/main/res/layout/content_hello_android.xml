<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.padcmyanmar.hello_android_padc.HelloAndroidActivity"
    tools:showIn="@layout/activity_hello_android">

    <TextView
        android:id="@+id/tv_hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello Android. My name is Tun Lin Aung!"
        android:textSize="20sp"
        android:textColor="@color/colorText"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/btn_click_me"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lbl_click_me"
        android:textAllCaps="false"
        android:layout_alignParentBottom="true"
        />

    <TextView
        android:id="@+id/tv_user_click_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You click me at {Timestamp}"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@id/tv_hello"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="20dp"
        />

</RelativeLayout>
